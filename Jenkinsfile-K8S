
pipeline {
   tools {
        maven 'Maven3'
    }
    agent any
    environment {
        registry = "654654160244.dkr.ecr.us-east-1.amazonaws.com/ekscicd"
    }
   
    stages {
        stage('Cloning Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '', url: 'https://github.com/Dhivnatra/EKS-CICD.git']]])     
            }
        }
      stage ('Build') {
          steps {
            sh 'mvn clean install'           
            }
      }
    // Building Docker images
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry 
        }
      }
    }
   
    // Uploading Docker images into AWS ECR
    stage('Pushing to ECR') {
     steps{  
         script {
                aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 654654160244.dkr.ecr.us-east-1.amazonaws.com
                docker push 654654160244.dkr.ecr.us-east-1.amazonaws.com/ekscicd:latest
              }
        }
      }

       stage('K8S Deploy') {
            sh 'kubectl apply -f  eks-deploy-k8s.yaml'
               }
       }
    }


